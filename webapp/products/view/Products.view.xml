<mvc:View controllerName="sap.training.products.controller.Products" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	
	<Table items="{/Products}">
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{ID}"/>
					<Text text="{Name}"/>
					<Text text="{Description}"/>
				</cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>columnID}"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>columnName}"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>columnDescription}"/>
				</header>
			</Column>
		</columns>
	</Table>
	
	<Button text="Submit" press="onPress"/>
	
</mvc:View>